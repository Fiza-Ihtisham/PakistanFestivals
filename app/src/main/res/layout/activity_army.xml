<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faraz.pakistanfestivals.Religious"
    android:background="@drawable/bck"

    android:weightSum="1">


    <Button
        android:id="@+id/next"
        android:layout_width="139dp"
        android:layout_height="76dp"
        android:text="NEXT"

        android:textStyle="bold"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_alignBottom="@+id/back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="BACK"
        android:textStyle="bold"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:id="@+id/back" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:scaleType="fitXY"
            android:padding="7dp"
            android:src="@drawable/pakarmy"
            android:layout_weight="0.23" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Eid al-Fitr was originated by the Islamic prophet Muhammad. It is observed on the first of the month of Shawwal at the end of the month of Ramadan, during which Muslims undergo a period of fasting."
            android:layout_weight="0.49"
            android:padding="20dp"/>

    </LinearLayout>



</RelativeLayout>

